PORT=5000
NODE_ENV=development
CLIENT_URL=http://localhost:3000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/diform
DATABASE_NAME=diform

# Redis Cache (optional - graceful degradation if unavailable)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Authentication
JWT_SECRET=your-secret-key-here-change-in-production
JWT_EXPIRY=7d

# Ollama Local LLM Configuration
OLLAMA_MODEL=llama3.2
OLLAMA_HOST=http://localhost:11434
OLLAMA_TIMEOUT=30000
AI_FALLBACK=true

# Sentry Error Monitoring (optional)
SENTRY_DSN=

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

# PM2 Configuration
PM2_INSTANCES=2

# Azure AD (for Electron app)
AZURE_CLIENT_ID=

# Email Notifications
EMAIL_ENABLED=false
EMAIL_PROVIDER=console
EMAIL_FROM=noreply@diform.example.com

# SendGrid (if EMAIL_PROVIDER=sendgrid)
SENDGRID_API_KEY=

# AWS SES (if EMAIL_PROVIDER=ses)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# SMTP (if EMAIL_PROVIDER=smtp)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASSWORD=
